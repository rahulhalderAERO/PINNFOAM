FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setExprFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

expressions
(
    U
    {
        field           U;
        dimensions     [0 1 -1 0 0 0 0];

        condition
        #{
            pos().y() < 0.5 &&
            pos().x() < 0.5 &&
            pos().y() > 0.25 &&
            pos().x() > 0.25
        #};

        expression
        #{
           vector(1,1,0)
        #};
    }
);


